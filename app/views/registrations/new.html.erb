<div class='row'>
  <div class='col'>
    <h2><%= t('.title') %></h2>
    <%= form_with model: @user, local: true , url: registrations_path do |f| %>
      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= active_record_errors(f.object, :email) %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= active_record_errors(f.object, :password) %>
      </div>
      <div>
         <%= f.submit t('.submit'), { class: 'btn btn-success' } %>
      </div>
    <% end %>
  </div>
</div>
